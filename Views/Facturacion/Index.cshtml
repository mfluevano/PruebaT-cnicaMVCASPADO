            </thead>
            <tbody>
            </tbody>

            <tfoot>
                <tr>
                    <td colspan="3"></td>
                    <td class="text-right table-dark">Subtotal</td>
                    <td class="text-right subTotal"></td>
                </tr>
                <tr>
                    <td colspan="3"></td>
                    <td class="text-right table-dark">Impuestos</td>
                    <td class="text-right impuestos"></td>
                </tr>
                <tr>
                    <td colspan="3"></td>
                    <td class="text-right table-dark">Total</td>
                    <td class="text-right gTotal"></td>
                </tr>
            </tfoot>
        </table>
    </div>
    <button type="button" class="btn btn-success btn-lg" id="btnGuardarFactura">Guardar Factura</button>
</form>
</div>

