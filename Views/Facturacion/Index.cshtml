<div class="container">
<form >

    <input type="hidden" asp-for="FechaEmisionFactura" value="@DateTime.Now" />

    <div class="col-sm2">
        <button type="button" class="btn btn-primary col-sm-2" id="btnNuevaFac">Nueva Factura </button>
    </div>
    <div id="productosSelector"></div>
    <div class="container">
        <div class="row">
            <div class="col-12 col-md-8">
                <label asp-for="IdCliente"></label>
                <div id="cmbCliente">
                </div>
            </div>
            <div class="col-6 col-md-4">
                <label asp-for="NumeroFactura"></label>
                <input asp-for="NumeroFactura" class="form-control">
            </div>
        </div>
    </div>
